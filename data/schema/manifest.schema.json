{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://medassist.ai/schemas/manifest.json",
  "title": "Fetch Manifest",
  "description": "Metadata for a data fetch operation",
  "type": "object",
  "required": ["source", "fetch_id", "fetched_at", "schema_version", "api_endpoint", "query_params", "record_count", "status"],
  "properties": {
    "source": { "type": "string", "description": "Data source name" },
    "fetch_id": { "type": "string", "description": "Unique fetch identifier" },
    "fetched_at": { "type": "string", "format": "date-time" },
    "schema_version": { "type": "string", "default": "1.0" },
    "api_endpoint": { "type": "string", "format": "uri" },
    "query_params": { "type": "object" },
    "record_count": { "type": "integer", "minimum": 0 },
    "total_available": { "type": ["integer", "null"] },
    "file_path": { "type": "string" },
    "checksum_sha256": { "type": ["string", "null"] },
    "status": { "type": "string", "enum": ["success", "failure"] },
    "error": { "type": ["string", "null"] }
  }
}
